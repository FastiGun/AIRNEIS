extends ../layouts/layout.pug

block links
  link(rel='stylesheet' href='/assets/css/connexion.css')

block content
  .container
    h1.connexion-h1 Connexion
    .connexion
      form(action="GET")
        .row1
           .input-field.col.s12
            input#email(placeholder="Email*")
            label(for="email")
        .row2
          .input-field.col.s12
            input#motdepasse(name="motdepasse", placeholder="Mot de passe*")
            label(for="motdepasse")
        .row3
          p.compte-p Pas de compte ?
          a(href="/inscription") Inscrivez-vous.  
        .row4
          .input-field.col.s12
            button.btn.waves-effect.waves-light(type='submit' name='action')
              | Se connecter 
              