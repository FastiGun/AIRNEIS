extends ../layouts/layout.pug

block links
  link(rel='stylesheet' href='/assets/css/connexion.css')

block content
  .container
    h1.connexion-h1 Connexion
    .connexion
      form(action="/connexion", method="post")
        .row1
           .input-field
            input#mail(name="mail", placeholder="Email*", required)
            label(for="mail")
        .row2
          .input-field
            input#mdp(name="mdp", placeholder="Mot de passe*", type="password", required)
            label(for="mdp")
        .row3
          p.compte-p Pas de compte ?
          a(href="/inscription") Inscrivez-vous.  
        .row4
          .input-field
            button.btn.waves-effect.waves-light(type='submit' name='action')
              | Se connecter 
              