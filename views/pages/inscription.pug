extends ../layouts/layout.pug

block links
  link(rel='stylesheet' href='/assets/css/inscription.css')

block content
  .container
    h1.inscription-h1 Register
    .inscription
      form(action="/inscription", method="post")
        .row1
          .input-field.col.s12
            input#nom(name="nom", placeholder="Lastname*", required)
            label(for="nom")
        .row2
          .input-field.col.s12
            input#prenom(name="prenom", placeholder="Firstname*", required)
            label(for="prenom")   
        .row3
          .input-field.col.s12
            input#mail(name="mail", placeholder="Email*", required)
            label(for="mail")
        .row4    
          .input-field.col.s12
            input#mdp(name="mdp", placeholder="Password*", type="password", required)
            label(for="mdp")
            span#mdp-length.error
            span#mdp-uppercase.error
            span#mdp-lowercase.error
            span#mdp-digit.error
            span#mdp-special.error
        .row5
          p.compte-p Already registered ? 
          a(href="/connexion") Log in. 
        .row6
          .input-field.col.s12
            button.btn.waves-effect.waves-light(type='submit' name='action' disabled)
              | Register

block script 
  script(src='/assets/scripts/passwordValidation.js')

