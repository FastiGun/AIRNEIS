extends ../layouts/layout.pug

block links 
    link(rel='stylesheet' href='assets/css/product_detail.css')

block content 
    .caroussel 
        .img-product
        .img-product
        .img-product
    .wrapper-product-detail 
        .rigth-side-wrapper 
            img(src=produit.image1)
        .left-side-wrapper 
            h1.product-name-title #{ produit.nom }
            p.product-stock #{ produit.stock }
            p.product-price #{ produit.prix }
            p.product-description #{ produit.description }
            a(href=`/add-produit-panier/${produit._id}`) 
                button.add-to-cart(type='button') Ajouter au panier
        .wrapper-similar-product
            each autreProduit, key in autresProduits
                .similar-product 
                    img(src=`${autreProduit.image1}`)
                    p.similar-product-name #{autreProduit.nom}
                    p.similar-product-price #{autreProduit.prix}
            
        