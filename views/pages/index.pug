extends ../layouts/layout.pug

block content
  .carroussel 
    .img-back(style=`background-image: url(${favoris.photo1})`)
    .img-back(style=`background-image: url(${favoris.photo2})`)
    .img-back(style=`background-image: url(${favoris.photo3})`)
    .img-back(style=`background-image: url(${favoris.photo4})`)
  .container.titreh2-index
    h2.titre-accueil FROM THE SCOTLAND HIGHLANDS OUR FURNITURE IS IMMORTAL
  .container.grille-categories-accueil 
     
    a(href='/product_list?id='+favoris.categorie1._id) 
      .categorie-accueil.img(style=`background-image: url(${favoris.categorie1.image})`)
    a(href='/product_list?id='+favoris.categorie2._id) 
      .categorie-accueil.img(style=`background-image: url(${favoris.categorie2.image})`)
    a(href='/product_list?id='+favoris.categorie3._id) 
      .categorie-accueil.img(style=`background-image: url(${favoris.categorie3.image})`)
  .all-cate 
    a.all-categories.btn.waves-effect.waves-light(href='/category') All categories
  .container.titre-produits-accueil Les Highlanders du moment
  .container.grille-produits-accueil 
    a(href='/product_detail?id='+favoris.article1._id) 
      .produit-accueil.img(style=`background-image: url(${favoris.article1.image1})`)
    a(href='/product_detail?id='+favoris.article2._id) 
      .produit-accueil.img(style=`background-image: url(${favoris.article2.image1})`)
    a(href='/product_detail?id='+favoris.article3._id) 
      .produit-accueil.img(style=`background-image: url(${favoris.article3.image1})`)